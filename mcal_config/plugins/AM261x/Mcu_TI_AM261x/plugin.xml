<plugin>
    <extension point="dreisoft.tresos.launcher2.plugin.module"
             id="Mcu_TI_AM261x_ModuleId"
             name="Mcu_TI_AM261x Module">

    <module id="Mcu_TI_AM261x"
            label="Mcu"
            mandatory="false"
            allowMultiple="false"
            description="TI Sitara MCU AM261x MCU Plugin"
            copyright="(c) 2023 Texas Instruments Incorporated"
            swVersionMajor="10"
            swVersionMinor="1"
            swVersionPatch="0"
            swVersionSuffix=""
            specVersionMajor="1"
            specVersionMinor="0"
            specVersionPatch="0"
            specVersionSuffix=""
            relVersionPrefix="AUTOSAR"
            relVersionMajor="4"
            relVersionMinor="3"
            relVersionPatch="1"
            relVersionSuffix="0"
            categoryType="Mcu"
            categoryLayer="Microcontroller Drivers"
            categoryCategory="MCU"
            categoryComponent="ECUC">
      <ecuType target="ARM" derivate="AM261x"/>
    </module>
  </extension>


    <extension point="dreisoft.tresos.launcher2.plugin.configuration"
             id="Mcu_TI_AM261x_ConfigId"
             name="Mcu_TI_AM261x Configuration">
    <configuration moduleId="Mcu_TI_AM261x">
      <schema>
        <manager class="dreisoft.tresos.autosar2.resourcehandling.AutosarSchemaManager"/>
        <resource value="config/Mcu.xdm" type="xdm" id="res_default"/>
		
		<resource value="config_ext/Mcu_Rec.xdm" type="xdm" id="res_recconf"/>
        
		<recconfig name="Default Recommended Configuration"
                   default="true"
                   description="Default Recommended Configuration"
                   resourceId="res_recconf"
                   path="ASPath:/TI_AM261x/Mcu_Rec"/>
				   
		<!-- register the Pre-configuration Mcu_PreConfiguration -->
		<resource value="config_ext/Mcu_PreConfiguration.xdm"
                  id="res_McuPreConfiguration"
                  type="xdm"/>
		<preconfig name="McuPreConfiguration"
                   default="true"
                   description="Mcu reset reasons"
                   resourceId="res_McuPreConfiguration"
                   path="ASPath:/TI_AM261x/McuPreConfiguration"/>		   
      </schema>

      <data>
        <manager class="dreisoft.tresos.autosar2.resourcehandling.AutosarConfigManager"/>
        <schemaNode path="ASPath:/TI_AM261x/Mcu"/>
      </data>

      <editor id="Mcu_TI_AM261x_EditorId"
              label="Default"
              tooltip="TI AR Mcu plug-in">
        <class class="dreisoft.tresos.launcher2.editor.GenericConfigEditor">
          <parameter name="schema" value="ASPath:/TI_AM261x/Mcu"/>
          <parameter name="title" value="Mcu"/>
          <parameter name="noTabs" value="false"/>
          <parameter name="noLinks" value="true"/>
          <parameter name="groupLinks" value="false"/>
          <parameter name="groupContainers" value="false"/>
          <parameter name="groupTables" value="true"/>
          <parameter name="optionalGeneralTab" value="true"/>
        </class>
      </editor>
    </configuration>
  </extension>
  <extension point="dreisoft.tresos.launcher2.plugin.generator"
              id="Mcu_TI_AM261x_GeneratorId"
              name="Mcu_TI_AM261x Generator">
    <generator
          class="dreisoft.tresos.launcher2.generator.TemplateBasedCodeGenerator"
          id="McuGenerator_AM261x"
          moduleId="Mcu_TI_AM261x">

      <!-- common template path parameters -->
      <parameter name="templates"
                 mode="generate,verify" value="generate,generate_swcd"/>

    </generator>
  </extension>
</plugin>

